<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScrumPokerCards.Pages.MenuPage"
             Title="Menu">
    <ContentPage.Resources>
        <ResourceDictionary>

            <!-- ContentViews -->

            <Style x:Key="Cell" TargetType="ContentView">
                <Setter Property="Padding" Value="20" />
                <Setter Property="BackgroundColor" Value="{DynamicResource ForegroundColor}" />
            </Style>

            <!-- Labels -->

            <Style x:Key="CellLabel" TargetType="Label">
                <Setter Property="TextColor" Value="{DynamicResource PrimaryColor}" />
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView>
            <Grid RowSpacing="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackLayout Grid.Row="0" BackgroundColor="{DynamicResource PrimaryColor}" Padding="20">
                    <Image Source="icon.png" HeightRequest="100"/>
                    <Label Text="Scrum Poker Cards" HorizontalOptions="Center"
                           TextColor="{DynamicResource PrimaryTextColor}"/>
                </StackLayout>
                <StackLayout Grid.Row="1">
                    <ContentView Style="{StaticResource Cell}">
                        <ContentView.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding GoToThemeCommand}" />
                        </ContentView.GestureRecognizers>
                        <Label Text="Color Theme" Style="{DynamicResource CellLabel}"/>
                    </ContentView>
                </StackLayout>
                <ContentView Grid.Row="2" Style="{StaticResource Cell}">
                    <ContentView.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToAboutCommand}" />
                    </ContentView.GestureRecognizers>
                    <Label Text="About" Style="{DynamicResource CellLabel}"/>
                </ContentView>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>